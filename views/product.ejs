<% layout ("layout") %>

  <!-- nav bar partial -->
  <% include navbar.ejs %>
  <!-- nav bar partial -->


  <!-- search box partial -->
  <% include searchbar.ejs %>
  <!-- search box partial -->
  
  <!-- Product header -->
	<div class="container-fluid product-page">
    <div class="row">
      <div class="col-md-6">
        <img src="<%- picurl %>">
      </div>
      <div class="col-md-6">
    			<h1><%= product %></h1>
          <p><%= description %></p>
          <p class="stars"><input id="input-6a" class="rating" data-size="xs" data-min="0" data-max="5" data-step=".5" data-show-clear="false" /></p>
          <% if (amazonurl) { %>
          <form action="<%= amazonurl %>"><button class="btn btn-primary">Buy on Amazon</button></form>
          <% } %>
          <% if (!amazonurl) {} %>
      </div>
    </div>
  </div> 

  <!-- Footer partial -->
  <% include globalfooter.ejs %>
