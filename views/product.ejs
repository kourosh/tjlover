<% layout ("layout") %>

  <div class="container"> <!-- Search box container -->
    <!-- Search box -->
    <form class="search-on-product-page" method="post" action="/product">
      <div class="row">
        <div class="col-md-10">
          <label for="product-search-form" class="sr-only">Product Search</label>
          <input type="text" class="form-control" id="product-search-form" name="product" placeholder="Product Name" />
        </div>
        <div class="col-md-1">
          <button type="submit" class="btn btn-default">Search</button>
        </div>
        <div class="col-md-1">
          <img src="/images/pointing-finger-small.png" />
        </div>
      </div>
    </form>
    <!-- End search box -->
  </div> <!-- End search form container -->

  <!-- Product header -->
	<div class="container-fluid product-page">
    <div class="row">
      <div class="col-md-6">
        <img src="<%- picurl %>">
      </div>
      <div class="col-md-6">
    			<h1><%= product %></h1>
          <p><%= description %></p>
          <p class="stars"><input id="input-6a" class="rating" data-size="xs" data-min="0" data-max="5" data-step=".5" data-show-clear="false" /></p>
          <button href="<%- amazonurl %>" class="btn btn-primary">Buy on Amazon</button> 
      </div>
    </div>
  </div> 
